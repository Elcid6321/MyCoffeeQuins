<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdashboard">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card utama -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#CC000000"
                app:strokeColor="#6D4C41"
                app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDetailMenu"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"                          android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:contentDescription="Espresso dengan latte art" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingTop="16dp">


                    <TextView
                        android:id="@+id/tvDetailName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Espresso"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:letterSpacing="0.02" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#C8A86D"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp" />


                    <TextView
                        android:id="@+id/tvDetailDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cek sound cek sound kukik kukik king okeyyy Cek sound cek sound kukik kukik king okeyyy Cek sound cek sound kukik kukik king okeyyy"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:lineSpacingExtra="4dp" />

                    <!-- Harga -->
                    <TextView
                        android:id="@+id/tvDetailPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp : 15.000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#D1AD39"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Tombol Tambah ke Keranjang -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddCart"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Tambah ke Keranjang"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#6D4C41"
                        app:rippleColor="#FFB74D" />

                    <!-- Tombol Kembali -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Kembali"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="28dp"
                        app:backgroundTint="#4E342E"
                        app:rippleColor="#A1887F"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
